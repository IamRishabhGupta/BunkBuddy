<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="16sp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="16sp"
        android:layout_marginBottom="-17sp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Add a Lecture"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="16sp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="72sp"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:text="Select a subject"/>
                <Space
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_weight="1"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:boxBackgroundColor="@color/card_bg"
                    app:boxCornerRadiusBottomEnd="8sp"
                    app:boxCornerRadiusBottomStart="8sp"
                    app:boxCornerRadiusTopStart="8sp"
                    app:endIconTint="@color/primary_blue"
                    app:boxCornerRadiusTopEnd="8sp"
                    app:boxStrokeWidth="0sp"
                    app:boxStrokeWidthFocused="0dp"
                    android:layout_marginStart="32sp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/autoCompleteSubject"
                        android:textColor="@color/primary_blue"
                        app:dropDownBackgroundTint="@color/card_bg"
                        android:dropDownHeight="wrap_content"
                        android:inputType="none"
                        android:text="@string/subject"
                        android:paddingTop="0sp"
                        android:paddingBottom="0sp"
                        android:drawablePadding="-20sp"
                        android:layout_weight="1"
                        android:layout_height="35sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:text="Select a day"/>
                <Space
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_weight="1"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:boxBackgroundColor="@color/card_bg"
                    app:boxCornerRadiusBottomEnd="8sp"
                    app:boxCornerRadiusBottomStart="8sp"
                    app:boxCornerRadiusTopStart="8sp"
                    app:endIconTint="@color/primary_blue"
                    app:boxCornerRadiusTopEnd="8sp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    android:layout_marginStart="32sp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/autoCompleteDay"
                        android:textColor="@color/primary_blue"
                        android:inputType="none"
                        android:text="@string/day"
                        android:paddingTop="0sp"
                        app:dropDownBackgroundTint="@color/card_bg"
                        android:dropDownHeight="wrap_content"
                        android:paddingBottom="0sp"
                        android:drawablePadding="-20sp"
                        android:layout_weight="1"
                        android:layout_height="35sp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:text="Start time"/>
                <Space
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_weight="1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="8sp"
                    android:id="@+id/start_time_card"
                    app:cardBackgroundColor="@color/card_bg"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12sp"
                        android:layout_marginTop="6sp"
                        android:layout_marginBottom="6sp"
                        android:text="PlaceHolder"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginEnd="12sp"
                        android:id="@+id/start_time_tv"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:text="End time"/>
                <Space
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_weight="1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="8sp"
                    android:background="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/card_bg"
                    android:id="@+id/end_time_card"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12sp"
                        android:layout_marginTop="6sp"
                        android:layout_marginBottom="6sp"
                        android:id="@+id/end_time_tv"
                        android:text="PlaceHolder"
                        android:layout_marginEnd="12sp"
                        android:textColor="@color/white"
                        android:textAlignment="center" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="32sp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100sp"
                    android:layout_height="47sp"
                    android:text="Cancel"
                    android:id="@+id/btn_cancel"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginEnd="20sp"
                    android:backgroundTint="@color/card_bg"
                    app:cornerRadius="10sp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="100sp"
                    android:layout_height="47sp"
                    android:layout_marginStart="20sp"
                    android:text="Add"
                    android:id="@+id/btn_add"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/card_bg"
                    app:cornerRadius="10sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>