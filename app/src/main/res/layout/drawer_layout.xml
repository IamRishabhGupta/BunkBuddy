<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/ScreenBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/drawer_head_bg"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="120sp"
            android:src="@drawable/noprofile"
            android:scaleType="centerInside"
            android:layout_marginStart="12sp"
            android:layout_marginTop="20sp"
            android:elevation="32sp"
            app:shapeAppearanceOverlay="@style/circularImageView"
            android:layout_height="120sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginStart="24sp"
            style="@style/HeadingText"
            android:layout_marginTop="12sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginStart="24sp"
            style="@style/HeadingText"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:paddingStart="12sp"
        android:gravity="center_vertical"
        android:id="@+id/ll_for_account"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="32sp"
            android:src="@drawable/ic_profile"
            android:layout_height="32sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:textSize="16sp"
            android:text="Account and Backup"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/text_primary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:paddingStart="12sp"
        android:gravity="center_vertical"
        android:id="@+id/ll_for_privacy"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="32sp"
            android:src="@drawable/ic_privacy"
            android:layout_height="32sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:textSize="16sp"
            android:text="Privacy Policy"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/text_primary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:paddingStart="12sp"
        android:gravity="center_vertical"
        android:id="@+id/ll_for_about"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="32sp"
            android:src="@drawable/ic_about"
            android:layout_height="32sp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:textSize="16sp"
            android:text="About"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/text_primary"/>

    <Space
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <com.google.android.material.materialswitch.MaterialSwitch
        android:layout_width="wrap_content"
        android:layout_marginStart="18sp"
        android:text="Dark Theme"
        android:checked="true"
        android:layout_marginBottom="16sp"
        android:layout_height="wrap_content"/>

</LinearLayout>