<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:gravity="center"
    android:background="@color/black"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SignupFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="40dp"
                android:elevation="12dp"
                android:progressTint="@color/white"
                android:visibility="gone"
                android:id="@+id/progress_bar"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@id/enter_btn"
                app:layout_constraintBottom_toBottomOf="@id/enter_btn"
                app:layout_constraintStart_toStartOf="@id/enter_btn"
                app:layout_constraintEnd_toEndOf="@id/enter_btn"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                android:id="@+id/signup_static"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:fontFamily="sans-serif-black"
                android:textSize="32sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/user_image_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_static"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="144dp"
                    android:src="@drawable/default_profile"
                    app:shapeAppearanceOverlay="@style/circularImageView"
                    android:id="@+id/userIv"
                    android:layout_marginStart="8sp"
                    android:layout_height="144dp"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/editImageIv"
                    android:layout_marginStart="-10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_image"
                    android:tint="@color/card_bg_light"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_image_layout"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/create_username_tv"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/create_username"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="4sp"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_username_tv"
                android:textColorHint="@color/white"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/primary_blue"
                app:boxCornerRadiusBottomEnd="12dp"
                android:elevation="32dp"
                android:id="@+id/username_text_input"
                app:boxBackgroundColor="@color/card_bg"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    android:id="@+id/username_text_edit"
                    android:textColor="@color/white"
                    android:hint="@string/eg_sebastian_stan"
                    android:textColorHint="@color/text_primary"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:id="@+id/email_static"
                app:layout_constraintTop_toBottomOf="@id/username_text_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/email"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/email_static"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/primary_blue"
                app:boxCornerRadiusBottomEnd="12dp"
                android:elevation="32dp"
                android:id="@+id/email_text_input"
                app:boxBackgroundColor="@color/card_bg"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    android:id="@+id/email_text_edit"
                    android:textColor="@color/white"
                    android:hint="@string/abc_xyz_com"
                    android:textColorHint="@color/text_primary"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/password_static"
                app:layout_constraintTop_toBottomOf="@id/email_text_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/password"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/password_static"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/primary_blue"
                app:boxCornerRadiusBottomEnd="12dp"
                android:elevation="32dp"
                app:passwordToggleTint="@color/text_primary"
                app:passwordToggleEnabled="true"
                android:id="@+id/password_text_input"
                app:boxBackgroundColor="@color/card_bg"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    android:id="@+id/password_text_edit"
                    android:textColor="@color/white"
                    android:hint="@string/dot_dot_dot_dot"
                    android:textColorHint="@color/text_primary"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/password_text_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/v_password_static"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="@string/verify_password"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v_password_static"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxStrokeWidthFocused="2dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/primary_blue"
                app:boxCornerRadiusBottomEnd="12dp"
                android:elevation="32dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/text_primary"
                android:id="@+id/v_password_text_input"
                app:boxBackgroundColor="@color/card_bg"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    android:id="@+id/v_password_text_edit"
                    android:textColor="@color/white"
                    android:hint="@string/dot_dot_dot_dot"
                    android:textColorHint="@color/text_primary"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:imeOptions="actionDone"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:strokeWidth="0dp"
                android:id="@+id/enter_btn"
                app:layout_constraintTop_toBottomOf="@id/v_password_text_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="12dp"
                android:layout_height="50dp">
                <LinearLayout
                    android:background="@drawable/drawer_head_bg"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="50dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/enter"
                        android:id="@+id/btn_text"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/enter_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"
                android:id="@+id/ar_tv"
                android:textSize="16sp"
                android:text="@string/already_registered"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ar_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/log_in_tv"
                android:text="@string/log_in"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>