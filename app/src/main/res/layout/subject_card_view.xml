<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12sp"
    android:layout_marginEnd="12sp"
    android:layout_marginTop="4sp"
    app:cardCornerRadius="20sp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:paddingTop="4sp"
        android:paddingBottom="8sp"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastUpdatedTxt"
            android:textSize="10sp"
            android:textAlignment="viewEnd"
            android:text="Last updated on 26/22/22"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subjectName"
            android:text="SubjectName"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="6sp"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2sp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:id="@+id/attendedPercTv"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:textSize="10sp"
                android:layout_marginEnd="2sp"
                android:id="@+id/missedPercTv"/>
        </LinearLayout>
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            app:trackColor="@color/red"
            app:indicatorColor="@color/blue"
            app:indicatorDirectionLinear="startToEnd"
            android:progress="90"
            android:layout_height="wrap_content"
            app:trackCornerRadius="10sp"
            android:layout_marginBottom="4sp"
            app:trackThickness="20sp"
            android:id="@+id/subjectProgress"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="6sp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="11sp"
                android:layout_height="11sp"
                android:src="@color/blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/attended_classes_placeholder"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/attendedClassTv"
                android:layout_marginStart="3sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="6sp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="11sp"
                android:layout_height="11sp"
                android:src="@color/red"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Missed: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="3sp"
                android:id="@+id/missedClassTv"/>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_marginTop="6sp"
            android:id="@+id/remarksTv"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="You can bunk 2 classes"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>