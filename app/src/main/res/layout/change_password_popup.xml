<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ScreenBackground"
    app:cardCornerRadius="16sp"
    android:layout_margin="12sp"
    android:padding="16sp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="10sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter new password"
            android:layout_marginStart="14sp"
            android:layout_marginEnd="14sp"
            android:textStyle="bold"
            style="@style/HeadingText"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/TextInput"
            android:textColorHint="@color/white"
            app:boxStrokeWidth="1dp"
            android:elevation="32dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_primary"
            android:focusedByDefault="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                android:id="@+id/new_password_edtxt"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:maxLines="1"
                android:imeOptions="actionNext"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-Enter new password"
            android:layout_marginStart="14sp"
            android:layout_marginTop="4sp"
            android:layout_marginEnd="14sp"
            android:textStyle="bold"
            style="@style/HeadingText"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/TextInput"
            android:textColorHint="@color/white"
            app:boxStrokeWidth="1dp"
            android:elevation="32dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_primary"
            android:focusedByDefault="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                android:id="@+id/new_password_edtxt2"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:maxLines="1"
                android:imeOptions="actionNext"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="14sp"
            style="@style/HeadingText"
            android:textStyle="bold"
            android:text="Enter current password"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/TextInput"
            android:textColorHint="@color/white"
            app:boxStrokeWidth="1dp"
            android:elevation="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                android:id="@+id/curr_password_edtxt"
                android:textColor="@color/white"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionNext"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:strokeWidth="0dp"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:id="@+id/save_btn"
            app:layout_constraintTop_toBottomOf="@id/v_password_text_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12sp"
            app:cardCornerRadius="12sp"
            android:layout_height="50sp">
            <LinearLayout
                android:background="@drawable/drawer_head_bg"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="50sp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:id="@+id/btn_text"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:strokeWidth="0dp"
            android:id="@+id/cancel_button"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            app:layout_constraintTop_toBottomOf="@id/v_password_text_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12sp"
            app:cardCornerRadius="12sp"
            style="@style/TimeCardView"
            android:layout_height="50sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="50sp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel2"
                    android:textSize="16sp"
                    style="@style/HeadingText" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>